<ProfileScreen> :
    id: profile
    name : 'profile'

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'greybackground.jpg'

    RelativeLayout:
        Button:
            text: 'Main'
            pos_hint: {'right': .055, 'top': .99}
            size_hint: [.05,.98]
            on_press:
                root.manager.current = 'main'
                root.manager.transition.direction = 'right'

        Button:
            text: 'Exit'
            pos_hint: {'right': 0.995, 'top': .105}
            size_hint: [.15,.1]
            on_press:
                exit()

        BalanceLabel:
            id: balance
            bold: True
            underline: True

        Label:
            id: AAPL
            pos_hint: {'right': .65,'top': 1.3}
            text: 'AAPL: '+str(app.user.stocks["AAPL"])
            bold: True
            underline: True

        Label:
            id: AMD
            pos_hint: {'right': .65,'top': 1.2}
            text: 'AMD: '+str(app.user.stocks["AMD"])
            bold: True
            underline: True

        Label:
            id: AMZN
            pos_hint: {'right': .65,'top': 1.1}
            text: 'AMZM: '+str(app.user.stocks["AMZN"])
            bold: True
            underline: True

        Label:
            id: INTC
            pos_hint: {'right': .65,'top': 1}
            text: 'INTC: '+str(app.user.stocks["INTC"])
            bold: True
            underline: True

        Label:
            id: MSFT
            pos_hint: {'right': .65,'top': .9}
            text: 'MSFT: '+str(app.user.stocks["MSFT"])
            bold: True
            underline: True

        Button:
            text: "Update"
            pos_hint: {'right': .95, 'top': .22}
            size_hint: [.15,.06]
            on_press:
                root.ids.balance.balance = str(app.user.money)

